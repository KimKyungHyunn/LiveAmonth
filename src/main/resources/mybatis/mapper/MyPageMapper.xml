<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="com.liveamonth.liveamonth.model.mapper.myPageMapper.MyPageMapper">

    <select id="getOtherScheduleUserInfo" parameterType = "int" resultType="com.liveamonth.liveamonth.entity.vo.UserVO">
   		  select * from user where userNO = #{userNO}
    </select>
    
    <select id = "getOneToOneAskVOList" parameterType = "int" resultType="com.liveamonth.liveamonth.entity.vo.OneToOneAskVO">
    	select * from oneToOneAsk where userNO = #{userNO};
    </select>
    
    <select id="getLastOneToOneAskNO" resultType="int">
      select max(oneToOneAskNO) from oneToOneAsk;
    </select>
    
    <select id="findOneToOneAskVO" parameterType = "int" resultType="com.liveamonth.liveamonth.entity.vo.OneToOneAskVO">
      select * from oneToOneAsk where oneToOneAskNO = #{oneToOneAskNO};
    </select>
    
    <insert id = "addOneToOneAsk" parameterType="com.liveamonth.liveamonth.entity.vo.OneToOneAskVO">
    	insert into oneToOneAsk 
    	values(#{oneToOneAskNO}, #{oneToOneAskCategory}, #{oneToOneAskSubject}, #{oneToOneAskDesc}, #{oneToOneAskDate},
    	      #{oneToOneAskImage},#{oneToOneAskUserEmail}, #{oneToOneAskReply}, #{userNO});
    </insert>
    
    <!-- delete -->
	<delete id="dropUser" parameterType="String">
		delete from user where userID = #{userID}
	</delete>
	
	<delete id="deleteOneToOneAsk" parameterType="int">
		delete from oneToOneAsk where oneToOneAskNO = #{oneToOneAskNO}
	</delete>
</mapper>